<div>
	<%= form_for @listing do |f| %>
		<div>
			<%= f.label :title %>
			<%= f.text_field :title %>
		</div>
		<div>
			<%= f.label :description %>
			<%= f.text_area :description %>
		</div>
		<div>
			<%= f.label :category_id %>
			<%= f.collection_select :category_id, Category.order(:name), :id, :name, inclede_blank: true %>
		</div>
		<div>
			<%= f.label :subcategory_id %>
			<%= f.grouped_collection_select :subcategory_id, Category.order(:name), :subcategories, :name, :id, :name, inclede_blank: true %>
		</div>
		<div>
			<%= f.label :city %>
			<%= f.text_field :city %>
		</div>
		<div>
			<%= f.label :state, 'Область' %>
			<%= f.text_field :state %>
		</div>
		<div>
			<%= f.label :zipcode %>
			<%= f.text_field :zipcode %>
		</div>
		<div>
			<%= f.submit %>
		</div>
	<% end %>
</div>
