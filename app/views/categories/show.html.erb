<div>
	<h2>
		<%= @category.name.capitalize %>
	</h2>
	<ul>
		<%= @category.subcategories.each do |subcategory| %>
		<li>
			<%= link_to subcategory.name.capitalize, category_subcategory_path(subcategory) %>
		</li>
		<% end %>
	</ul>
	<h2>Listings</h2>
	<h3>
		<% if @listings.present? %>
		<ul>
			<%= @listings.each do |listing| %>
			<li>
				<p>
					<%= listing.title %> (<%= listing.city %> , <%= listing.state %>)
				</p>
				<p>
					<%= listing.description %>
				</p>
				<p>
					<%= listing.created_at.strftime('%d %B %Y') %>
				</p>
			</li>
			<% end %>
			<% else %>
				<p>No listings found!</p>
			<% end %>
		</ul>
	</h3>
</div>